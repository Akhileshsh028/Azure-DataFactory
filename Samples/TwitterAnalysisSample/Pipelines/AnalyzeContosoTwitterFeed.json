{  
   "name":"AnalyzeContosoTwitterFeed",
   "properties":{  
      "description":"Analyse Twitter feed to determine Contoso trending",
      "activities":[  
         {  
            "name":"AnalyzeData",
            "description":"Analyse Twitter feed to determine Contoso trending",
            "type":"HDInsightActivity",
            "inputs":[  
               {  
                  "name":"ContosoTwitterRaw"
               }
            ],
            "outputs":[  
               {  
                  "name":"ContosoTwitterAggregation"
               },
               {  
                  "name":"ContosoTweets"
               }
            ],
            "linkedServiceName":"HDInsightLinkedService",
            "transformation":{  
               "type":"Hive",
               "extendedProperties":{  
                  "TwitterRaw":"wasb://<container>@<accountname>.blob.core.windows.net/twitter/rawdata/",
                  "TweetsCount":"wasb://<container>@<accountname>.blob.core.windows.net/twitter/aggregate/TweetsCount/",
                  "TweetsByDate":"wasb://<container>@<accountname>.blob.core.windows.net/twitter/aggregate/TweetsByDate/",
                  "Tweets":"wasb://<container>@<accountname>.blob.core.windows.net/twitter/aggregate/Tweets/",
                  "TweetsByHour":"wasb://<container>@<accountname>.blob.core.windows.net/twitter/aggregate/TweetsByHour/",                  
               },
               "scriptpath":"<container>\\twitter\\scripts\\Twitteragg.hql",
               "scriptLinkedService":"StorageLinkedService"
            },
            "policy":{  
               "concurrency":1,
               "executionPriorityOrder":"NewestFirst",
               "retry":1,
               "timeout":"01:00:00"
            }
         },
         {  
            "name":"CopyTweets",
            "description":"Copy Tweets to an Output Blob.",
            "type":"CopyActivity",
            "linkedServiceName":"HDInsightLinkedService",
            "inputs":[  
               {  
                  "name":"ContosoTweets"
               }
            ],
            "outputs":[  
               {  
                  "name":"ContosoTweetsBlob"
               }
            ],
            "transformation":{  
               "source":{  
                  "type":"BlobSource",
                  "blobColumnSeparators":",",
                  "NullValues":"\\N"
               },
               "sink":{  
                  "type":"BlobSink",
                  "writeBatchSize":1000000,
                  "writeBatchTimeout":"01:00:00"
               }
            },
            "Policy":{  
               "concurrency":1,
               "executionPriorityOrder":"NewestFirst",
               "style":"StartOfInterval",
               "retry":0,
               "timeout":"01:00:00"
            }
         }
      ]
   }
}