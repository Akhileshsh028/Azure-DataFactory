{
  "name": "AzureBlobSource",
  "properties":
  {
  "location":
    {
        "type": "AzureBlobLocation",
        "blobPath": "$$Text.Format('Container/folder/', SliceStart)",
        "linkedServiceName": "StorageLinkedService",
        "format":
        {
            "type": "TextFormat",
            "columnDelimiter": "\t",
            "rowDelimiter": "\n"
        }
    },
  "availability":
    {
        "frequency": "Hour",
        "interval": 1,
		"waitOnExternal":
            {
                "retryInterval": "00:01:00",
                "retryTimeout": "00:10:00",
                "maximumRetry": 3
            }

    }
  }
}
